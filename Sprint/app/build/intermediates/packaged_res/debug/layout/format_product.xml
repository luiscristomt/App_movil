<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/vTxt_nameProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/vtxt_descriptionProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/vTxt_priceProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_updateProduct"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text=""
                android:background="@drawable/ic_baseline_mode_edit_24" />

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_deleteProduct"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text=""
                android:background="@drawable/ic_baseline_delete_24"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>